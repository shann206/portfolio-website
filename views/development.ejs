<body data-bs-spy="scroll" data-bs-target=".custom-navbar" data-bs-offset="70" tabindex="0">
  <%- include('partials/navbar') %>

<section class="category-header py-3">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Development</li>
      </ol>
    </nav>
    <h2 class="text-center">Development Projects</h2>
  </div>
</section>

<section id="category-projects" class="py-5">
  <div class="container">
    <div class="row g-4">
        <!-- Project 1 -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
          <div class="card w-100">
            <img class="card-img-top" src="/images/musicApp1.png" alt="Music App">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">Music Library App</h5>
              <p class="card-text">Creating a Music Library application with add, edit, delete, and view functions using
                Express.</p>
              <a href="/project1" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <!-- Project 2 -->
      <div class="col-md-6 col-lg-3">
          <div class="card h-100 portfolio-card">
            <img src="/images/escapeRoom.png" class="card-img-top" alt="Escape Room">
            <div class="card-body">
              <h5 class="card-title">VR Escape Room</h5>
              <p class="card-text">Using Unity to create an escape room with 4 puzzles.</p>
              <a href="/project2" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
      </div>
      <!-- Project 3 -->
      <div class="col-md-6 col-lg-3">
        <div class="card h-100 portfolio-card">
          <img src="/images/inventoryTracker1.png" class="card-img-top" alt="Inventory Tracker">
          <div class="card-body">
            <h5 class="card-title">Inventory tracker website</h5>
            <p class="card-text">Creating an inventory tracker website, allowing the organizer to add the items for
