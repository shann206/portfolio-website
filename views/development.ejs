      <!-- Project 4 -->
      <div class="col-md-6 col-lg-3">
          <div class="card h-100 portfolio-card">
            <img src="/images/pizzaApp1.png" class="card-img-top" alt="Pizza App">
            <div class="card-body">
              <h5 class="card-title">Pizza App</h5>
              <p class="card-text">Using React to create a pizza ordering app.</p>
              <a href="/project4" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
      </div>

      
    </div>
  </div>
